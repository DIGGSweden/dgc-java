<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>se.digg.hcert</groupId>
  <artifactId>hcert</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <name>DIGG :: Vaccine Certificate :: CWT and COSE</name>
  <description>CWT and COSE support for the Vaccine Certificate Issuance Service</description>
  <url>https://github.com/DIGGSweden/vaccinationsbevis-poc</url>

  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:https://github.com/DIGGSweden/vaccinationsbevis-poc.git</connection>
    <developerConnection>scm:https://github.com/DIGGSweden/vaccinationsbevis-poc.git</developerConnection>
    <url>https://github.com/DIGGSweden/vaccinationsbevis-poc/tree/master</url>
  </scm>

  <developers>
    <developer>
      <name>Henrik Bengtsson</name>
